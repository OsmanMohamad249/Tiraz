# Flask App Configuration (for Flask-based frontend/app)
FLASK_APP=run.py
FLASK_ENV=development
DATABASE_URL=sqlite:///taarez.db

# Backend (FastAPI) Configuration
# Environment: development, staging, or production
# Production automatically disables DEBUG and enforces strict security
ENVIRONMENT=development

# REQUIRED: Strong secret key for JWT token signing (min 32 chars)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-strong-secret-key-at-least-32-chars-long-change-this

# Database Configuration for Backend
# For development with docker-compose, use the following:
DATABASE_URL=postgresql://taarez:taarez_password@postgres:5432/taarez_db
# For production, use your actual database credentials

# PostgreSQL Configuration (used by docker-compose)
POSTGRES_USER=taarez
POSTGRES_PASSWORD=taarez_password
POSTGRES_DB=taarez_db

# CORS Configuration for Backend
# Comma-separated list of allowed origins
# Development: http://localhost:3000,http://localhost:8080
# Production: https://your-domain.com,https://app.your-domain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Debug Mode
# Automatically set to false in production environment
DEBUG=true

# AI Service URL (optional)
AI_SERVICE_URL=http://ai-models:8000
